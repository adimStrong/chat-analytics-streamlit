# Streamlit Secrets Configuration
# Copy this file to secrets.toml and fill in your values
# DO NOT commit secrets.toml to version control (it's in .gitignore)

# Database connection string
DATABASE_URL = "postgresql://user:password@host:port/database"

# Example with Railway:
# DATABASE_URL = "postgresql://postgres:yourpassword@tramway.proxy.rlwy.net:28999/railway"

# Google Sheets Schedule Sync
# Get credentials from Google Cloud Console: https://console.cloud.google.com/
# 1. Create a Service Account
# 2. Enable Google Sheets API
# 3. Download JSON key file
# 4. Share your Google Sheet with the service account email

[gcp_service_account]
type = "service_account"
project_id = "your-project-id"
private_key_id = "your-private-key-id"
private_key = "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
client_email = "your-service-account@your-project.iam.gserviceaccount.com"
client_id = "your-client-id"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"

# Google Sheet URL for schedule data
# Format: https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit
SCHEDULE_SHEET_URL = "https://docs.google.com/spreadsheets/d/your-spreadsheet-id/edit"

# Worksheet name containing schedule data
SCHEDULE_WORKSHEET_NAME = "Schedule"
